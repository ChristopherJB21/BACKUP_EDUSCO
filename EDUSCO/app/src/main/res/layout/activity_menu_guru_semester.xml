<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingRight="5dp"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="#FFD200"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_semester1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="Semester1"
        android:background="@drawable/semester_1"/>

    <Button
        android:id="@+id/btn_semester2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:onClick="Semester2"
        android:background="@drawable/semester_2"/>
</LinearLayout>