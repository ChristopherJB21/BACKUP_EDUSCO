<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515151"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/text_color"
        android:textColorHighlight="@color/text_color"
        android:textColorHint="@color/text_color"
        android:textColorLink="@color/text_color"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TableRow
        android:id="@+id/tR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView">

        <TextView
            android:id="@+id/text_pass_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Sekarang"
            android:textColor="@color/text_color"
            android:textColorHighlight="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textColorLink="@color/text_color" />

        <EditText
            android:id="@+id/edit_pass_now"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password Sekarang"
            android:inputType="text"
            android:textColor="@color/text_color"
            android:textColorHighlight="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textColorLink="@color/text_color" />
    </TableRow>

    <Button
        android:id="@+id/button_next"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tR"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_next"
        android:onClick="Next" />

    <TableRow
        android:id="@+id/tR1"
        android:layout_below="@id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_pass_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Baru"
            android:textColor="@color/text_color"
            android:textColorHighlight="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textColorLink="@color/text_color"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edit_pass_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password Baru"
            android:inputType="textPassword"
            android:textColor="@color/text_color"
            android:textColorHighlight="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textColorLink="@color/text_color"
            android:visibility="invisible" />
    </TableRow>

    <TableRow
        android:id="@+id/tR2"
        android:layout_width="match_parent"
        android:layout_below="@id/tR1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_pass_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Konfirmasi"
            android:textColor="@color/text_color"
            android:textColorHighlight="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textColorLink="@color/text_color"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/edit_pass_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password Konfirmasi"
            android:inputType="textPassword"
            android:textColor="@color/text_color"
            android:textColorHighlight="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textColorLink="@color/text_color"
            android:visibility="invisible" />
    </TableRow>

    <Button
        android:id="@+id/button_change"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tR2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_change"
        android:onClick="Change"
        android:visibility="invisible" />

</RelativeLayout>